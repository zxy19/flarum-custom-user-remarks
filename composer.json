{
    "name": "xypp/flarum-custom-user-remarks",
    "description": "Allow user to set an remarks for other user.",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.2.0"
    },
    "authors": [
        {
            "name": "小鱼飘飘",
            "email": "z@xypp.cc",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Xypp\\CustomUserRemarks\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Custom User Remarks",
            "category": "feature",
            "icon": {
                "name": "fas fa-user-tag",
                "color": "#fff",
                "backgroundColor": "#4caf50"
            }
        },
        "flarum-cli": {
            "modules": {
                "admin": true,
                "forum": true,
                "js": true,
                "jsCommon": true,
                "css": true,
                "locale": true,
                "gitConf": true,
                "githubActions": true,
                "prettier": true,
                "typescript": true,
                "bundlewatch": false,
                "backendTesting": true,
                "editorConfig": true,
                "styleci": true
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload-dev": {
        "psr-4": {
            "Xypp\\CustomUserRemarks\\Tests\\": "tests/"
        }
    }
}
